<section class="collections">
  <div class="collections__container">
    <h2 class="section-title">
      <span class="section-title__star">✦</span>
      LATEST COLLECTION
      <span class="section-title__star">✦</span>
    </h2>
    
    <div class="collections__grid">
      {% for collection in collections limit: 4 %}
        <div class="collection-card">
          <div class="collection-card__image" style="background-image: url('/assets/{{ collection.image }}');">
            <div class="collection-card__overlay">
              <h3 class="collection-card__title">{{ collection.title }}</h3>
              <p class="collection-card__count">{{ collection.products.size }} products</p>
              <a href="/collections/{{ collection.id }}" class="collection-card__button">View Collection</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

